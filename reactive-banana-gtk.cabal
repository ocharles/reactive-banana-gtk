name:                reactive-banana-gtk
version:             0.1.0.0
synopsis:            High-level bindings using reactive-banana to GTK3
-- description:
homepage:            https://github.com/ocharles/reactive-banana-gtk
license:             BSD3
license-file:        LICENSE
author:              Ollie Charles
maintainer:          ollie@ocharles.org.uk
-- copyright:
category:            Graphics
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.14

library
  exposed-modules:     Reactive.Banana.Gtk, Reactive.Banana.Gtk.Button, Reactive.Banana.Gtk.Internal, Reactive.Banana.Gtk.Container, Reactive.Banana.Gtk.Widget, Reactive.Banana.Gtk.Label
  default-extensions: DeriveFunctor, ConstraintKinds, FunctionalDependencies, FlexibleContexts, RecursiveDo, GADTs, MultiParamTypeClasses, FlexibleInstances, RankNTypes, RecordWildCards, GeneralizedNewtypeDeriving
  other-extensions:     UndecidableInstances, OverloadedStrings
  build-depends:       base >=4.8 && <4.10, contravariant >=1.3 && <1.5, transformers >=0.4 && <0.6, mtl >=2.2 && <2.3, gtk3 >=0.13 && <0.15, reactive-banana >=1.0 && <2.0
  hs-source-dirs:      src
  default-language:    Haskell2010

executable test
            build-depends: base, contravariant, gtk3, mtl, reactive-banana, reactive-banana-gtk, transformers
            main-is: ReactiveBananaGtk.hs
            default-language: Haskell2010
